{
    "manifest_version": 3,
    "name": "YouTube Distraction Blocker",
    "version": "1.0",
    "permissions": ["tabs", "scripting"],
    "host_permissions": ["*://www.youtube.com/*"],
    "background": {
        "service_worker": "background.js"
    },
    "content_scripts": [
        {
            "matches": ["*://www.youtube.com/watch*"],
            "js": ["content.js"]
        }
    ]
}
